{
  "name": "cypress-task",
  "version": "1.0.26",
  "description": "Cypress Task",
  "main": "index.js",
  "scripts": {
    "clean:reports": "shx rm -rf mochawesome-report/*.json",
    "setup:reportDir": "node setupReportDir.js",
    "test": "npm run clean:reports && export REPORT_DIR=$(npm run setup:reportDir --silent) && npx cypress run || true && npm run generate:html:report",
    "merge:reports": "mochawesome-merge $REPORT_DIR/*.json > $REPORT_DIR/cypress-tests-report.json",
    "create:html:report": "marge --reportDir $REPORT_DIR $REPORT_DIR/cypress-tests-report.json",
    "generate:html:report": "npm run merge:reports && npm run create:html:report"
  },
  "dependencies": {
    "@faker-js/faker": "^7.6.0",
    "chai": "^4.3.10",
    "crypto": "^1.0.1",
    "cypress-file-upload": "^5.0.8",
    "cypress-localstorage-commands": "^2.2.1",
    "cypress-wait-until": "^1.7.2",
    "cypress-xpath": "^2.0.1",
    "faker": "^6.6.6",
    "lodash": "^4.17.21",
    "mocha": "^10.1.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.2.1",
    "mochawesome-report-generator": "^6.2.0",
    "moment": "^2.29.4"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "cypress": "^13.3.0",
    "cypress-mochawesome-reporter": "^3.8.2",
    "shx": "^0.3.4"
  }
}